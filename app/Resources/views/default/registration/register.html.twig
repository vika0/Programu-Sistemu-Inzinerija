{% extends "::base.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/home-style.css') }}">
{% endblock %}
{% block header %}
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.surname) }}
                {{ form_row(form.email) }}
                {{ form_row(form.dateOfBirth) }}
                {{ form_row(form.personalId) }}
                {{ form_row(form.phone) }}
                {{ form_row(form.plainPassword.first) }}
                {{ form_row(form.plainPassword.second) }}
                {{ form_row(form.role) }}


                <button type="submit">Register!</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>


{% endblock %}
{% block footer %}
{% endblock %}